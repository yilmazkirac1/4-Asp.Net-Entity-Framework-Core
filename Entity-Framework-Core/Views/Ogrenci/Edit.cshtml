@model Ogrenci
<h2>Ogrenci Guncelleme</h2>
<hr>
<div class="row">
<div class="col-8">
    <form asp-controller="Ogrenci" asp-action="Edit" method="post">
        <div asp-validation-summary="All"> </div>
        <input type="hidden" asp-for="OgrenciId">
        <div class="mb-3">
            <label asp-for="OgrenciAd" class="form-label">Ogrenci Ad</label>
            <input asp-for="OgrenciAd" class="form-control">
        </div>
    
        <div class="mb-3">
            <label asp-for="OgrenciSoyad" class="form-label">Ogrenci Soyad</label>
            <input asp-for="OgrenciSoyad" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Eposta" class="form-label">Eposta</label>
            <input asp-for="Eposta" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon</label>
            <input asp-for="Telefon" class="form-control">
        </div>
    
        <button type="submit" class="btn btn-secondary">KAYDET</button>
    </form>
</div>
<div class="col-4">
<h4>Kurslar</h4>
<hr>
<ul>
    @foreach(var item in @Model.KursKayitlari)
    {
        <li>@item.Kurs.Baslik</li>
        <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.Ogrenci.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
    }
</ul>
</div>
</div>
