@model IEnumerable<KursKayit>
    <h2>KursKayit Listesi</h2>
    <a href="/KursKayit/Create" class="btn btn-primary">Kursa Ogrenci Kaydet</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m=>m.KursKayitId)</th>
                <th >@Html.DisplayNameFor(m=>m.Ogrenci.OgrenciAd)</th>
                <th >@Html.DisplayNameFor(m=>m.Kurs.Baslik)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem =>item.KursKayitId)</td>
                    <td>@Html.DisplayFor(modelItem =>item.Ogrenci.AdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem =>item.Kurs.Baslik)</td>
                    <td>                        
                        <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger">Kaydi sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>